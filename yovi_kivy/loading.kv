WindowManager:
    LoginWindow:
    LoadingWindow:
    MainWindow:

######################################################################################  Loading Window
<LoadingWindow>
    name: "loading"
    canvas:
        Color: 
            rgba: (1, 1, 1, 1)
        Rectangle: 
            source:'asset/background.jpg'
            size: root.width, root.height
            
    Label:
        pos_hint: {"center_x":0.5, "center_y":0.4} 
        markup: True
        text: "[b][color=181a1c]NEXT AJA....[/color][/b]"

    Button:  
        text:"NEXT"
        background_color: 0.4, 0.5, 0.6, 1
        pos_hint: {"center_x":0.5, "center_y":0.3} 
        on_press: 
            app.root.current = "main"
            root.manager.transition.direction = "left"
